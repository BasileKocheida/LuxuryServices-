{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
   <h1 style="padding-bottom:2rem; padding-top:10rem; background-color: #2F3138;text-align: center; color:white;margin-top:0">JobOffer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Note</th>
                <th>Title</th>
                <th>Location</th>
                <th>Closing_date</th>
                <th>Salary</th>
                <th>Creation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr>
                <td>{{ job_offer.id }}</td>
                <td>{{ job_offer.description }}</td>
                <td>{{ job_offer.note }}</td>
                <td>{{ job_offer.title }}</td>
                <td>{{ job_offer.location }}</td>
                <td>{{ job_offer.closingDate ? job_offer.closingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job_offer.salary }}</td>
                <td>{{ job_offer.creationDate ? job_offer.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn bn-lg gradient secondary btn-block waves-effect waves-light btn-register" href="{{ path('job_offer_show', {'id': job_offer.id}) }}">show</a>
                    <a class="btn bn-lg gradient secondary btn-block waves-effect waves-light btn-register" href="{{ path('job_offer_edit', {'id': job_offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_offer_new') }}">Create new</a>

    {% endblock %}