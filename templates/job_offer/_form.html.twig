
{% block stylesheets %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        .dropdown-content{
            max-height: none;
        } 
        .tp-caption.boxshadow, .boxshadow {
                box-shadow: 0 0 0px rgb(0 0 0)!important;
        }
    </style>

{% endblock %}
    

{{ form_start(form) }}
    <section class="section-padding">
        <div class="container">
            <div class="row">
                <h3 class="text-extrabold">Create job offer</h3>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.title) }}
                        {{ form_label(form.title) }}
                    </div>
                </div>
                <div class="clearfix visible-sm"></div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.note) }}
                        {{ form_label(form.note) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.description) }}
                        {{ form_label(form.description) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.location) }}
                        {{ form_label(form.location) }}
                    </div>
                </div>
                {# <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.creation_date) }}
                        {{ form_label(form.creation_date) }}
                    </div>
                </div> #}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.salary) }}
                        {{ form_label(form.salary) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.closing_date) }}
                        {{ form_label(form.closing_date) }}
                        
                    </div>
                </div>
                 <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.client) }}
                        {{ form_label(form.client) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.job_category) }}
                        {{ form_label(form.job_category) }}
                    </div>
                </div>
                 <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="input-field">
                        {{ form_widget(form.job_type) }}
                        {{ form_label(form.job_type) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <button class="btn bn-lg gradient primary btn-block waves-effect waves-light btn-register">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
            
{% block javascripts %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


    <script>
        $(document).ready(function(){
            $('select').formSelect();
        });
    </script>
    <script>
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd' });
    </script>

{% endblock %}