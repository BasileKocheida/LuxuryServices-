{% extends 'base.html.twig' %}

{% block title %}Candidat index{% endblock %}

{% block body %}
<br><br><br>

    <h1 style="padding-bottom:2rem; padding-top:10rem; background-color: #2F3138;text-align: center; color:white;margin-top:0">Candidate list</h1>



    <table class="table">
    <div class='listCandidat' >
        <thead>
            <tr>
                <th>Profile_picture</th>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Country</th>
                <th>Cv</th>
                <th>Current_location</th>
                <th>Adress</th>
                <th>Short_description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidat in candidats %}


            <tr>
                <td>{% if candidat.profilePicture is null %} 
                       <img style="width: 4rem; height: 5rem;"src="{{ asset ('/uploads/picture/profiltype.jpg')}}">
                {% else %}
                <img style="width: 4rem; height: 4rem;" src="{{ asset ('/uploads/picture/') ~ candidat.profilePicture }}">
                {% endif %}</td>
                
                <td>{{ candidat.id }}</td>
                <td>{{ candidat.firstName }}</td>
                <td>{{ candidat.lastName }}</td>
                <td>{{ candidat.country }}</td>
                <td><a href="{{ asset ('uploads/cv/') ~ candidat.cv }}">ðŸ“‚</td>
                <td>{{ candidat.currentLocation }}</td>
                <td>{{ candidat.adress }}</td>
                <td>{{ candidat.shortDescription }}</td>
                <td>
                    <button><a href="{{ path('candidat_show', {'id': candidat.id}) }}">show</a></button><br>
                    <button><a href="{{ path('candidat_edit', {'id': candidat.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </div>
    </table>

    <a href="{{ path('candidat_new') }}">Create new</a><br>
    <a href="{{ path('admin_index') }}">Return Admin Control</a>

    
{% endblock %}
