{% extends 'base.html.twig' %}

{% block title %}JobCategory index{% endblock %}

{% block body %}
    <h1 style="padding-bottom:2rem; padding-top:10rem; background-color: #2F3138;text-align: center; color:white;margin-top:0">JobCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_category in job_categories %}
            <tr>
                <td>{{ job_category.id }}</td>
                <td>{{ job_category.category }}</td>
                <td>
                    <a href="{{ path('job_category_show', {'id': job_category.id}) }}">show</a>
                    <a href="{{ path('job_category_edit', {'id': job_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_category_new') }}">Create new</a><br>
    <a href="{{ path('admin_index') }}">Return Admin Control</a>
{% endblock %}
